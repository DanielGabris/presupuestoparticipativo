= object.title.html_safe
- if object.respond_to?(:required?) && object.required?
  %abbr(title="#{t '.required'}")*
- if object.extra?
  %span
    %i.icon-info-sign
    - if object.extra_url?
      = link_to custom_or_default(@questionnaire.read_more, t('.read_more')), object.extra, target: '_blank'
    - else
      = link_to custom_or_default(@questionnaire.read_more, t('.read_more')), "##{object.title.parameterize}_extra", 'class' => 'popover-toggle', 'data-content' => escape_attribute(markdown(object.extra)).html_safe, 'data-placement' => placement, 'data-html' => true
- if object.embed?
  %span
    %i.icon-info-sign
    = link_to t('.view_media'), "##{object.title.parameterize}_embed", 'data-toggle' => 'modal', 'rel' => 'tooltip', 'title' => t('.view_media_tip')
